<!-- javascript is separate from html with completely different syntax -->
<!-- scripts are usually placed after the content and before the end of the body tag.
this lets the content load first before the scripts do as the user scrolls down,
allowing for faster loading times of the content -->
<!-- .value is used to retrive an input from the user. if not, .innerHTML is used. -->
<!-- console.log() is used as a checkpoint when debugging. when trying to locate an error,
you can comment out a section of code and place a console.log with a message before it 
then run the code. if the message isn't displayed in the console, the commented out code
must not be the problem which helps eliminate it as the source of the error. -->

<script>
    function sayhello()
    {
        var uname;
        uname = document.getElementById("fname").value

        document.getElementById("hellomsg").innerHTML
        = "Hello, " +uname; 
    }
    function issuealert()
    {
        alert("ALERT TEST");
    }
    function issueprompt()
    {
        var name; 

        name = prompt("What is your name?");

        alert("Hello, "+name);
    }
    function issueconfirm()
    {
        if(confirm("Quieres?"))
            alert("Ogey")
        else
            alert("Rrat");
    }
</script>

